@model LunaryCore.Models.Campanhas

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Create";
}


    
    <link href="~/Campanha.css" rel="stylesheet" />
    

<div>
    <form action="/Campanhas/Create" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="Descricao">Descrição</label>
            <input type="text" class="form-control"
                   id="Descricao" name="Descricao"
                   />
        </div>

        <div class="form-group">
            <label for="CAMPRECO">Preço</label>
            <input type="text" class="form-control" step="0.010"
                   id="CAMPRECO" name="CAMPRECO" required
                    />
        </div>

        <div class="form-group">
            <label for="Foto"></label>
            <input type="file" class="form-control"
                   id="Foto" name="Foto" />
        </div>
        <div>
            <p class="text-left">Tamanho Maximo Do Arquivo 4 Mb</p>
        </div>
        <div>
            <a href="/Campanha/Index"><button type="button" class="btn btn-primary">Voltar</button></a>
            <a href="/Campanha/Index"><button type="submit" class="btn btn-success">Salvar</button></a>
        </div>
        <div>

        </div>
    </form>
</div>