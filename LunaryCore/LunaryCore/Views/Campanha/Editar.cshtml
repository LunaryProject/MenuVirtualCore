<div>
    <form action="/Campanhas/Editar?id=@Model.CAMID" enctype="multipart/form-data" method="post">
        <label for="descricao">Descrição</label>
        <input type="text" class="form-control" id="descricao" name="descricao" value="@Model.CAMDESCRICAO" required />
        <div>
            <label for="preco">Preço</label>
            <input type="text" class="form-control" id="preco" name="preco" value=@Model.CAMPRECO.ToString("F") required />
        </div>
        <div>
            <label for="foto"></label>
            <input type="file" class="form-control" id="foto" name="foto" value=@Model.CAMFOTO>
            <td>
                @{
                    if (Model.CAMFOTO != null)
                    {
                        var base64 = Convert.ToBase64String(Model.CAMFOTO);
                        var imgSrc = String.Format("data:image/jpg/gif/png;base64,{0}", base64);
                        <img src='@imgSrc' style="max-width:250px; max-height:400px;" />
                    }
                }
            </td>
        </div>
        <br />
        <div>
            <a href="/Campanha/Index"> <button type="button" class="btn btn-primary">Voltar</button>  </a>
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>

    </form>

